[flake8]
extend-ignore =
    E114,
    E115,
    E116,
    E201,
    E202,
    E203,
    E204,
    E231,
    E265,
    E266,
    E303,
    E402,
    E501,
exclude =
    ; __init__.py # totally ignore __init__.py files
    setup.py # ignore setup.py file
    docs/
#F401 ignore unused imports in __init__.py files
#F403 ignore unable to detect undefined names from import *
per-file-ignores =
    __init__.py:F401,F403